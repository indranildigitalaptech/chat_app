<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>⚡ Team SPD's Room</title>
  <link rel="icon" type="image/jpg" href="/images/spd.jpg">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Global custom CSS -->
  <link rel="stylesheet" href="/css/global.css">
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Username Overlay -->
  <div id="username-modal" class="username-overlay">
    <div class="username-box">
      <h4 class="mb-3 text-dark text-center">Enter your username</h4>
      <form id="username-form" autocomplete="off">
        <input id="username-input" class="form-control mb-3" placeholder="Your name" required />
        <button class="btn btn-primary w-100" type="submit">Join Chat</button>
      </form>
    </div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <span class="navbar-brand">✨ Team SPD's Room</span>
  </nav>

  <!-- Main Chat Area -->
  <div class="container my-4 flex-grow-1 d-flex flex-column">
    <!-- Chat Box -->
    <div id="chat-box" class="flex-grow-1 mb-3 d-flex flex-column"></div>

    <!-- Chat Input (hidden until username set) -->
    <form id="chat-form" class="d-flex" style="display:none;">
      <input type="text" id="chat-input" class="form-control me-2" placeholder="Type your message..." required />
      <button type="submit" class="btn btn-success">Send</button>
    </form>
  </div>

  <!-- Footer -->
  <footer class="text-center py-3 mt-auto bg-dark text-white-50">
    <small>⚡ Built with Socket.IO & EJS</small>
  </footer>

  <!-- Scripts -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>
</html>
